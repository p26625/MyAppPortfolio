<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/grid7"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/app_title"
        android:textColor="@color/icons"
        android:textSize="@dimen/headline" />

    <Button
        android:id="@+id/button1"
        android:layout_width="@dimen/grid7"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="24dp"
        android:background="@color/icons"
        android:onClick="launchApp1"
        android:text="@string/app1"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/grid7"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="@dimen/grid2"
        android:background="@color/icons"
        android:onClick="launchApp2"
        android:text="@string/app2"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/grid7"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="@dimen/grid2"
        android:background="@color/icons"
        android:onClick="launchApp3"
        android:text="@string/app3"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/grid7"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="@dimen/grid2"
        android:background="@color/icons"
        android:onClick="launchApp4"
        android:text="@string/app4"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/grid7"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="@dimen/grid2"
        android:background="@color/icons"
        android:onClick="launchApp5"
        android:text="@string/app5"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/grid7"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button5"
        android:layout_below="@+id/button5"
        android:background="@color/icons"
        android:layout_marginTop="@dimen/grid2"
        android:onClick="launchApp6"
        android:text="@string/app6"
        android:textColor="@color/primary_text" />

</RelativeLayout>
